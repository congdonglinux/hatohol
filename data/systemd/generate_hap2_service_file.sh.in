#!/bin/sh

exec_prefix=@exec_prefix@
prefix=@prefix@
sysconfdir=@expanded_sysconfdir@

cat << EOF
[Unit]
Description=${DESC}
Wants=network-online.target
After=syslog.target network-online.target

[Service]
Type=forking
KillMode=process
User=hatohol
Group=hatohol
Environment=CONF=${sysconfdir}/hatohol/hap2.conf
Environment=LOG_CONF=${sysconfdir}/hatohol/hap2-logging.conf
ExecStart=${prefix}/libexec/hatohol/hap2/hatohol/hap2_starter.py --config \${CONF} --log-conf \${LOG_CONF} --plugin-path ${prefix}/libexec/hatohol/hap2/hatohol/hap2_${HAP2_PLUGIN}.py

[Install]
WantedBy=multi-user.target
EOF
